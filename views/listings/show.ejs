<% layout("/layouts/boilerplate") %>
<body>
    <div class="col-8 offset-4">
        <br>
        
        <h3><%= listing.title %></h3>
    </div>

    <div class="card col-6 offset-4" style="width: 20rem;">
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
            <p class="card-text">
                <br>
                <%= listing.description %> <br>
                &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / Night <br>
                <%= listing.location %> <br>
                <%= listing.country %> <br>
            </p>
        </div>
    </div> 
    
    <br>

    <!-- Buttons Side by Side -->
    <div class="d-flex gap-3 offset-4">
        <form action="/listings/<%= listing._id %>/edit" method="GET">
            <button type="submit" class="btn btn-dark add-btn">Edit </button>
        </form>
        
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button type="submit" class="btn btn-dark delete-btn">Delete</button>
        </form>
    </div>
    <div class="col-8 offset-4">
        <hr>
        <h4>Leave us review</h4>
        
        <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
  
            <label for="rating" class="form-label">Rating</label>
            <input type="range" name="review[rating]" id="rating" class="form-range" min="1" max="5" required>
          
            <div class="mt-3">
              <label for="comment" class="form-label">Comment</label>
              <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
              <div class="invalid-feedback">Please add some comment for review </div>
            </div>
          
            <br>
          
            <button class="btn btn-outline-dark" type="submit">Submit</button>
          </form>
        <br>
        <hr>
        <p><b>All Reviews</b></p>
        <div class="row">
        <% for (const review of listing.reviews) { %>
        <div class="card col-5 ms-3 mb-3" >
            <div class="card-body">
                <h5 class="card-title">Alex Doe</h5>
                
                <p class="card-text"><%= review.comment %></p>
                <p class="card-text"><%= review.rating %> Stars</p>
            </div>
            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3"></form>
                <button type="submit" class="btn btn-sm btn-dark">Delete</button>
            </form>
        </div>
    
    <% } %>
</div>
</div>
</body>
</html>

